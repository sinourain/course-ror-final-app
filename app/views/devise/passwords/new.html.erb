	<div class="container">
	<h2>Forgot your password?</h2>
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f| %>

	  <%= devise_error_messages! %>

	  <div><%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address" %></div>
	  <br />
	  <div><%= f.submit "Send me reset password instructions", class: "btn btn-primary" %></div>
	  <br />
	<% end %>

	<%= render "devise/shared/links" %>
	<br />
</div>

